# EditorConfig helps developers define and maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88

# Python files
[*.py]
indent_style = space
indent_size = 4

# JSON, YAML, TOML
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2
