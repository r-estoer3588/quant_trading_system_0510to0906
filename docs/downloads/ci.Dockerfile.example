# Example CI Dockerfile - install fonts and chromium dependencies
FROM ubuntu:22.04

RUN apt-get update && apt-get install -y --no-install-recommends \
  ca-certificates \
  fonts-noto-cjk \
  libx11-xcb1 libxcomposite1 libxcursor1 libxdamage1 libxrandr2 libasound2 \
  libpangocairo-1.0-0 libatk1.0-0 libatk-bridge2.0-0 libcups2 libdrm2 \
  wget curl gnupg --no-install-suggests && rm -rf /var/lib/apt/lists/*

